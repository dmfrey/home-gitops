{
    "java.server.launchMode": "Standard",
    "files.readonlyInclude": {
        "{**/.c4z/.extsrcs/*.PROTSYM.cbl,**/.c4z/.extsrcs/*.PROTSYM.listing}": true
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.highlightActiveBracketPair": true,
    "editor.hover.delay": 1500,
    "editor.rulers": [
      100
    ],
    "editor.stickyScroll.enabled": false,
    "explorer.autoReveal": false,
    "files.associations": {
        "**/*.json5": "jsonc"
    },
    "files.trimTrailingWhitespace": true,
    "material-icon-theme.files.associations": {
      // TODO: https://github.com/PKief/vscode-material-icon-theme/issues/330
      "*.secret.sops.env": "lock",
      "*.secret.sops.yaml": "lock"
    },
    "material-icon-theme.folders.associations": {
        // top level
        ".archive": "archive",
        // .github
        ".github/workflows": "robot",
        // namespaces
        "dataflow": "github",
        "dev": "github",
        "gateway": "github",
        "flux-system": "pipe",
        "kube-system": "kubernetes",
        "logs": "tools",
        "monitor": "event",
        "network": "connection",
        "security": "guard",
        "spring-dev": "github",
        "spring-dev2": "github",
        "storage": "dump",
        "system": "kubernetes",
        "trace": "tools"
    },
    "sops.defaults.ageKeyFile": "age.key",
    "vs-kubernetes": {
      "vs-kubernetes.kubeconfig": "./kubeconfig",
      "vs-kubernetes.knownKubeconfigs": [
        "./kubeconfig"
      ]
    },
    "yaml.schemaStore.enable": true,
    "yaml.schemas": {
      "kubernetes": "./kubernetes/**/*.yaml"
    }
}
